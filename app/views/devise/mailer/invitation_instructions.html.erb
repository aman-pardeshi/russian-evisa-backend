<p><%= t("devise.mailer.invitation_instructions.hello", first_name: @resource.name.split(' ')[0]) %></p>

<p><%= t("devise.mailer.invitation_instructions.someone_invited_you") %></p>
<p><%= t("devise.mailer.invitation_instructions.invitation_message") %>
<%= link_to t("devise.mailer.invitation_instructions.accept"), "#{ENV.fetch("FRONTEND_URL")}/accept-invitation?invitation_token=#{@token}" %></p>

<% if @resource.invitation_due_at %>
  <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
<% end %>

<p><%= t("devise.mailer.invitation_instructions.ignore") %></p>
